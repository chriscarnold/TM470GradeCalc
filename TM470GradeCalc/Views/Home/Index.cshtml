@model TM470GradeCalc.Models.GradeCalc

<div class="container">
    <h2>TM470 Grade Calculator</h2>
    <form asp-action="Calculate" method="post">
        <div class="form-group">
            <label for="TMA1">TMA1</label>
            <input type="number" class="form-control" id="TMA1" name="TMA1" required />
        </div>
        <div class="form-group">
            <label for="TMA2">TMA2</label>
            <input type="number" class="form-control" id="TMA2" name="TMA2" required />
        </div>
        <div class="form-group">
            <label for="TMA3">TMA3</label>
            <input type="number" class="form-control" id="TMA3" name="TMA3" required />
        </div>
        <div class="form-group">
            <label for="EMA">EMA</label>
            <input type="number" class="form-control" id="EMA" name="EMA" required />
        </div>
        <button type="submit" class="btn btn-primary">Calculate</button>
    </form>
</div>

<div id="interactive-owl">
    <img src="~/img/owl.png" alt="Owl" />
</div>

<script>
    const owl = document.getElementById('interactive-owl');

    // Mouse move interaction
    document.addEventListener('mousemove', function(event) {
        const owlRect = owl.getBoundingClientRect();
        const owlCenterX = owlRect.left + owlRect.width / 2;
        const owlCenterY = owlRect.top + owlRect.height / 2;

        const angleX = (event.clientX - owlCenterX) / owlRect.width;
        const angleY = (event.clientY - owlCenterY) / owlRect.height;

        owl.style.transform = `rotate(${angleX * 15}deg) rotateY(${angleY * 15}deg)`;
    });

    // Click interaction
    owl.addEventListener('click', function() {
        owl.classList.add('owl-clicked');
        setTimeout(() => {
            owl.classList.remove('owl-clicked');
        }, 500);
    });

    
    const style = document.createElement('style');
    style.innerHTML = `
        #interactive-owl.owl-clicked img {
            transform: scale(1.2) rotate(0deg) !important;
        }
    `;
    document.head.appendChild(style);
</script>

